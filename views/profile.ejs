<%- include adminheader %>
<div style="padding:30px">
</div>

<div class="container">

    <div class="page-header text-center">

        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
    </div>


    <form >
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-bordered table-hover">
                <tbody style="text-align:left;">
                <tr>
                    <th style="width: 150px;">Email: </th>
                    <td><%= user.local.email %><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Name: </th>
                    <td><%= user.local.firstName %> <%= user.local.lastName %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Phone Number: </th>
                    <td><%= user.local.phone %><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Address: </th>
                    <td><%= user.local.address %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">City: </th>
                    <td><%= user.local.city %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">State: </th>
                    <td><%= user.local.state %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Zip Code: </th>
                    <td><%= user.local.zipcode %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Membership: </th>
                    <td><%= user.local.userType %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Membership Start Date: </th>
                    <td><%= user.local.createDate %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Membership Expire Date: </th>
                    <td><%= user.local.expireDate %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Checkout Copy: </th>
                    <td><%= user.local.checkedOutCopy %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Available Copy: </th>
                    <td><%= user.local.availableCopy %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Balance: </th>
                    <td><%= user.local.balance %></td>
                </tr>

                </tbody>
            </table>
            <a href="/modifyprofile/<%= user.local.email %>" class="btn btn-primary">Modify Profile  </a>

            <a href="/destroy/<%= user.local.email %>"  class="btn btn-primary">Delete Member</a>

            <a href="/changeMembership/<%= user.local.email %>/<%= user.local.userType %>" class="btn btn-primary">Change Membership  </a>


            </div>
    </form>


</div>


