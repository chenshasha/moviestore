<%- include adminheader %>
<div style="padding:30px">
</div>

<div class="container">

    <div class="page-header text-center">

        <h1><span class="fa fa-anchor"></span> View Movie Page</h1>
    </div>


    <form >
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-bordered table-hover">
                <tbody style="text-align:left;">
                
                <tr>
                    <th style="width: 150px;">MovieID: </th>
                    <td><%=movies.id%><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Movie Name: </th>
                    <td><%=movies.MovieName%><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Movie Banner: </th>
                    <td><%= movies.MovieBanner %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Release Date: </th>
                    <td><%= movies.ReleaseDate %><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Rent Amount: </th>
                    <td><%= movies.RentAmount %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Available Copies: </th>
                    <td><%= movies.AvailableCopies %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Category: </th>
                    <td><%= movies.category %></td>
                </tr>

               

                </tbody>
            </table>
           
<a href="/modifyMovie/<%= movies._id %>" class="btn btn-primary">Modify Movie  </a>
            <a href="#" onClick="confirmDeletion()"  class="btn btn-primary">Delete Movie</a>

           


            </div>
    </form>


</div>

<script type="text/javascript">
function confirmDeletion() {
 
  var confirmmessage = "Are you sure you want to delete?";
 
  var message = "Action Was Cancelled By User";
 
  if (confirm(confirmmessage)) {
      alert("Movie Deleted ");
      window.location = "/deleteMovie/<%= movies._id %>"
 
  } else {
 
       alert(message);
 
  }
 
}
</script>
