<%- include memberheader %>

<link href="/bootstrap.css" rel="stylesheet">
<body>
<div style="padding:30px">
</div>

<div class="container">

    <div class="page-header text-center">

        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
    </div>
    
<!-- show any messages that come back with authentication -->
    	<% if (message.length > 0) { %>
    		<div class="alert alert-danger"><%= message %></div>
    	<% } %>

    <form >
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-bordered table-hover">
                <tbody style="text-align:left;">
                <tr>
                    <th style="width: 150px;">Email: </th>
                    <td><%= user.email %><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Name: </th>
                    <td><%= user.firstName %> <%= user.lastName %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Phone Number: </th>
                    <td><%= user.phone %><br></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Address: </th>
                    <td><%= user.address %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">City: </th>
                    <td><%= user.city %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">State: </th>
                    <td><%= user.state %></td>
                </tr>
                <tr>
                    <th style="width: 150px;">Zip Code: </th>
                    <td><%= user.zipcode %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Membership: </th>
                    <td><%= user.userType %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Membership Start Date: </th>
                    <td><%= user.createDate %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Membership Expire Date: </th>
                    <td><%= user.expireDate %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Checkout Copy: </th>
                    <td><%= user.checkedOutCopy %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Available Copy: </th>
                    <td><%= user.availableCopy %></td>
                </tr>

                <tr>
                    <th style="width: 150px;">Balance: </th>
                    <td><%= user.balance %></td>
                </tr>

                </tbody>
            </table>
            </div>
    </form>

<div class="col-sm-6 col-sm-offset-3" style="text-align: center;">
       
           <a href="/seeMovieForMembers/<%= user.userId %>" class="btn btn-primary">See Movies Issued </a>
        
            </div>

</div>

</body>
